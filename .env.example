# ============================================================
# KitBank.net Backend - Environment Configuration
# Copy this file to .env and fill in your values
# ============================================================

# ============================================================
# Database Configuration
# ============================================================
DATABASE_URL=postgresql+asyncpg://kitbank:kitbank_password@localhost:5432/kitbank_db
DATABASE_SYNC_URL=postgresql://kitbank:kitbank_password@localhost:5432/kitbank_db

# ============================================================
# Redis Configuration
# ============================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================
# JWT Configuration
# ============================================================
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================
# Security
# ============================================================
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION_MINUTES=30

# ============================================================
# AWS S3 Configuration (Optional - use local storage if not configured)
# ============================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=kitbank-documents
AWS_REGION=us-east-1
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=./uploads

# ============================================================
# Email Configuration (SendGrid)
# ============================================================
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@kitbank.net
SENDGRID_FROM_NAME=KitBank

# ============================================================
# SMS Configuration (Twilio)
# ============================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================================
# Application Settings
# ============================================================
APP_NAME=KitBank.net
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
FRONTEND_URL=http://localhost:3000

# ============================================================
# CORS Settings
# ============================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# ============================================================
# Rate Limiting
# ============================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================
# OTP Settings
# ============================================================
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# ============================================================
# Mobile Money Providers
# ============================================================

# M-Pesa (Safaricom Kenya)
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_SHORTCODE=
MPESA_PASSKEY=
MPESA_ENVIRONMENT=sandbox
MPESA_CALLBACK_URL=

# MTN Mobile Money
MTN_MOMO_SUBSCRIPTION_KEY=
MTN_MOMO_API_USER=
MTN_MOMO_API_KEY=
MTN_MOMO_ENVIRONMENT=sandbox
MTN_MOMO_CALLBACK_URL=

# Airtel Money
AIRTEL_MONEY_CLIENT_ID=
AIRTEL_MONEY_CLIENT_SECRET=
AIRTEL_MONEY_ENVIRONMENT=sandbox
AIRTEL_MONEY_CALLBACK_URL=

# ============================================================
# International Transfers (SWIFT/Wire)
# ============================================================
SWIFT_BIC_CODE=
CORRESPONDENT_BANK_API_URL=
CORRESPONDENT_BANK_API_KEY=
INTERNATIONAL_TRANSFER_APPROVAL_THRESHOLD=10000

# ============================================================
# FX Provider (Exchange Rates)
# ============================================================
FX_PROVIDER=internal
FX_API_KEY=
FX_API_URL=
FX_RATE_CACHE_MINUTES=15

# ============================================================
# Transaction Settings
# ============================================================
DEFAULT_CURRENCY=USD
TRANSACTION_REFERENCE_PREFIX=TXN
MAX_TRANSACTION_AMOUNT=1000000
MIN_TRANSACTION_AMOUNT=1

# ============================================================
# QR Code Settings
# ============================================================
QR_CODE_DEFAULT_EXPIRY_HOURS=24
QR_CODE_MAX_EXPIRY_HOURS=720

# ============================================================
# Bill Payment
# ============================================================
BILLER_AGGREGATOR_API_URL=
BILLER_AGGREGATOR_API_KEY=

# ============================================================
# Logging
# ============================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================
# Celery (Background Tasks) - Optional
# ============================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
